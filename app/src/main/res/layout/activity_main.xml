<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context="second.ntl.com.scorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="#30352d"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_home_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="#102305"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:onClick="increaseHome"
                    android:text="+"
                    android:textColor="#edf4e9"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_score_text"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#102305"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="#edf4e9"
                    android:textSize="100sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/minus_home_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#102305"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:onClick="decreaseHome"
                    android:text="-"
                    android:textColor="#edf4e9"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/guest"
                    android:textColor="#30352d"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/plus_guest_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="#102305"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:onClick="increaseGuest"
                    android:text="@string/plus"
                    android:textColor="#edf4e9"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/guest_score_text"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#102305"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="#edf4e9"
                    android:textSize="100sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/minus_guest_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#102305"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:onClick="decreaseGuest"
                    android:text="@string/minus"
                    android:textColor="#edf4e9"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#30352d"
            android:fontFamily="serif"
            android:onClick="reset"
            android:text="@string/reset"
            android:textColor="#edf4e9"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
